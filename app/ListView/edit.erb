<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @list_view.name %></h1>
    <a href="<%= url_for :action => :show, :id => @list_view.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @list_view.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @list_view.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="list_view[name]" class="fieldLabel">Name</label>
            <input type="text" id="list_view[name]" name="list_view[name]" value="<%= @list_view.name %>" <%= placeholder( "Name" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
